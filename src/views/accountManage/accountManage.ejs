<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Subject Management</title>
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Nobile&family=Mohave:wght@400&family=Amasis+MT+Pro+Medium&display=swap">
  <link rel="stylesheet" type="text/css" href="/public/css/concept.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body>
  <%- include('../partials/navbar/mainNavbar.ejs') %>

<div class="wrapper" id="wrapper">

  <main class="nav-drawer page-content-wrapper" id="page-content-wrapper">
    <div class="contentForm" id="form">
      <div class="container">
        <h1>Account Management</h1>

        <div class="filter-search">
          <select name="filter" id="filter">
            <option value="all">All</option>
            <option value="admin">Admin</option>
            <option value="user">User</option>
          </select>
          <input type="text" name="search" id="search" placeholder="Enter keyword...">
          <button id="search-btn">Search</button>
        </div>
        <div class="add-user">
          <a href="/account-management/add-newUser"><button id="add-user-btn">Add new User</button> </a>

        </div>
        <div class="info-board">
          <table class="table-hover">
            <thead>
              <tr class="row-hover">
                <th>ID</th>
                <th>Fullname</th>
                <th>Gender</th>
                <th>Email</th>

                <th>Phone</th>
                <th>Address</th>
                <!-- <th>Actor</th> -->
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% userList.forEach(function(item, index){ %>
                <tr class="row-hover">
                  <td>
                    <%= item.id %>
                  </td>
                  <td>
                    <%= item.account_firstname %>
                      <%= item.account_lastname %>
                  </td>
                  <td>
                    <%= item.account_gender %>
                  </td>
                  <td>
                    <%= item.account_email %>
                  </td>

                  <td>
                    <%= item.account_phonenumber %>
                  </td>
                  <td>
                    <%= item.account_address %>
                  </td>
                  <!-- <td><%= item.actor %></td> -->
                  <td>
                    <a style="display: inline;" href="/account-management/edit-profile/<%= item.id %>"><button
                        class="edit-btn" type="submit">Edit</button></a>
                    <form style="display: inline;" action="/account-management/delete-user/<%= item.id %>"
                      method="POST"><button class="delete-btn" type="submit">Delete</button></form>

                  </td>
                </tr>
                <% }) %>


            </tbody>
          </table>
        </div>
      </div>


    </div>
  </main>
</div>
 

</body>


</html>