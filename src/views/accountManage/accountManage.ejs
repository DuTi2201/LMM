<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Learning Materials Management</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Nobile&family=Mohave:wght@400&family=Amasis+MT+Pro+Medium&display=swap">
    <link rel="stylesheet" type="text/css" href="/public/css/accountManage.css" >
    <link rel="icon" href="../public/image/LOGO_LMM.svg" type="image/x-icon">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
</head>
<body>
    <header>
        
        <a class="logo"  href="/home">
            
                <img src="../public/image/baner.svg" alt="Logo" href="/home">
               
        </a>
        <nav>
            <ul>
                <li><a href="/home">Home</a></li>
                <li><a href="/courses">Courses</a></li>
                <li><a href="/about">About</a></li>
            </ul>
        </nav>
        <nav class="usermenu">
            <ul>
                <span class="logout">You are logged in! (  <a href="/logout">Log out</a>)</span>
                
            </ul>
        </nav>
    </header>
    
   <main class="nav-drawer">
    <div class="panel" id="panel">
        <h2>Dashboard</h2>
        <ul>
            <li class="accMana" id="add-btn"> <a href="/account-management">Account Management</a></li>
            
        </ul>
    </div>
    <div class="contentForm" id="form">
        <div class="container">
            <h1>Account Management</h1>

            <div class="filter-search">
              <select name="filter" id="filter">
                <option value="all">All</option>
                <option value="admin">Admin</option>
                <option value="user">User</option>
              </select>
              <input type="text" name="search" id="search" placeholder="Enter keyword...">
              <button id="search-btn">Search</button>
            </div>
            <div class="add-user">
              <a href="/account-management/add-newUser"><button  id="add-user-btn">Add new User</button> </a>
              
            </div>
            <div class="info-board">
              <table class="table-hover">
                <thead>
                  <tr class="row-hover">
                    <th>ID</th>
                    <th>Fullname</th>
                    <th>Gender</th>
                    <th>Email</th>
                    
                    <th>Phone</th>
                    <th>Address</th>
                    <!-- <th>Actor</th> -->
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% userList.forEach(function(item, index){ %>
                    <tr class="row-hover">
                      <td><%= item.id %></td>
                      <td><%= item.account_firstname %> <%= item.account_lastname %></td>
                        <td><%= item.account_gender %></td>
                      <td><%= item.account_email %></td>
                    
                      <td><%= item.account_phonenumber %></td>
                      <td><%= item.account_address %></td>
                      <!-- <td><%= item.actor %></td> -->
                      <td>
                        <a style="display: inline;" href="/account-management/edit-profile/<%= item.id %>" ><button class="edit-btn" type="submit">Edit</button></a>
                        <form style="display: inline;" action="/account-management/delete-user/<%= item.id %>" method="POST" ><button class="delete-btn" type="submit">Delete</button></form>
                        
                      </td>
                    </tr>
                  <% }) %>
                  
                  
                </tbody>
              </table>
            </div>
          </div>
          
        
    </div>
   </main>
    
</body>
</html>
