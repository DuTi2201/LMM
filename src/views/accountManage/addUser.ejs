  <main class="nav-drawer">
    <div class="contentForm" id="form">
      <form method="POST" action="/account-management/add-newUser/create-user">
        <div class="container">
          <h1>Add New A User</h1>
          <div class="col-md-8">
            <form action="/edit-profile" method="post" enctype="multipart/form-data">
              <div class="form-group">
                <input type="text" name="account_firstname" id="account_firstname" placeholder="Firstname" required>
              </div>
              <div class="form-group">
                <input type="text" name="account_lastname" id="account_lastname" placeholder="Lastname" required>
              </div>
              <div class="form-group">
                <input type="text" name="account_username" id="account_username" placeholder="Username" required>
              </div>
              <div class="form-group">
                <input type="email" name="account_email" id="account_email" placeholder="Email" required>
              </div>
              <div class="form-group">
                <input type="password" name="account_password" id="account_password" placeholder="New Password"
                  required>
              </div>
              <div class="form-group">
                <input name="account_phonenumber" id="account_phonenumber" placeholder="Phonenumber" required>
              </div>
              <div class="form-group">
                <input name="account_address" id="account_address" placeholder="Address" required></input>
              </div>
              <div class="form-group ">
                <label for="account_gender">Gender: </label>
                <select name="account_gender" id="account_gender">
                  <option value="Male">Male</option>
                  <option value="Female">Female</option>
                  <option value="Other">Other</option>
                </select>
                <!-- <label for="actor">Actor:  </label>
                  <select name="actor" id="actor">
