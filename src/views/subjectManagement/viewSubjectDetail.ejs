<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Subject Management</title>
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Nobile&family=Mohave:wght@400&family=Amasis+MT+Pro+Medium&display=swap">
  <link rel="stylesheet" type="text/css" href="/public/css/concept.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body>

<div class="wrapper" id="wrapper">
  <main class="nav-drawer page-content-wrapper" id="page-content-wrapper">
    <div class="contentForm" id="form">
      <div class="container">
        <h1>Subjects Management</h1>
        <div class="add-user">
          <a href="/subject-management/create-subjects"><button id="add-user-btn">New Subject</button> </a>

        </div>
        <div class="info-board">
          <table class="table-hover">
            <thead>
              <tr class="row-hover">
                <th>ID</th>
                <th>Subject Code</th>
                <th>Subject Name</th>
                <th>Description</th>
                <th>Type</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% subjectList.forEach(function(item, index){ %>
                <tr class="row-hover">
                  <td>
                    <%= item.id %>
                  </td>
                  <td>
                    <%= item.subject_code %>
                  </td>
                  <td>
                    <%= item.subject_name %>
                  </td>
                  <td>
                    <%= item.subject_description %>
                  </td>
                  <td>
                    <%= item.subject_type %>
                  </td>
                  <td>
                    <a style="display: inline;" href="/subject-management/update-subjects/<%= item.id %>"><button
                        class="edit-btn" type="submit">Edit</button></a>
                    <form style="display: inline;" action="/subject-management/delete-subject/<%= item.id %>"
                      method="POST"><button class="delete-btn" type="submit">Delete</button></form>

                  </td>
                </tr>
                <% }) %>


            </tbody>
          </table>
        </div>
      </div>


    </div>
  </main>
</div>
 

</body>


</html>