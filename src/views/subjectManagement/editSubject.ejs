<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Subject Management</title>
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Nobile&family=Mohave:wght@400&family=Amasis+MT+Pro+Medium&display=swap">
  <link rel="stylesheet" type="text/css" href="/public/css/concept.css">
  <link rel="icon" href="../public/image/LOGO_LMM.svg" type="image/x-icon">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body>
  <nav>
    <a class="logo" href="/home" >
      <img src="../public/image/baner.svg" alt="LMM" href="/home" />
    </a>
    <ul class="desktop-menu">
      <li><a href="#">Home</a></li>
      <li><a href="#">Services</a></li>
      <li><a href="#">Blog</a></li>
      <li><a href="#">Contact Us</a></li>
    </ul>
    <div class="usermenu">
      <ul>
        <span class="logout">You are logged in! ( <a href="/logout">Log out</a>)</span>

      </ul>
    </div>
    <div class="hamburger">
      <span class="line"></span>
      <span class="line"></span>
      <span class="line"></span>
    </div>
  </nav>
  <div class="menubar">
    <h2>Dashboard</h2>
    <ul>
      <li class="accMana" id="add-btn"> <a href="/account-management">Accounts Management</a></li>
      <li id="add-btn"> <a href="/material-management">Material Management</a></li>
      <li class="accMana" id="add-btn"> <a href="/subject-management">Subjects Management</a></li>

    </ul>
  </div>
  <main class="nav-drawer">
    <div class="contentForm" id="form">
      <form action="/subject-management/update-subjects/subject-updated" method="POST">
        <div class="container">
          <h1>Update Subject</h1>
          <div class="col-md-8">


            <div class="form-group">
              <input hidden type="text" name="subject_name" id="subject_name" value="<%=subjectData.id %>">
            </div>
            <div class="form-group">
              <input type="text" name="subject_description" id="subject_description"
                value="<%=subjectData.subject_description %>">
            </div>
            <div class="form-group">
              <input type="text" name="subject_type" id="subject_type" value="<%=subjectData.subject_type %>">
            </div>
            <button class="add-user-btn" type="submit" name="submit" id="submit">Update</button>

            <a href="/subject-management" id="back">Back</a>

          </div>
        </div>
    </div>
    </form>
    </div>


    </div>
  </main>
  <script>
    const mobileNav = document.querySelector(".hamburger");
    const navbar = document.querySelector(".menubar");

    const toggleNav = () => {
      navbar.classList.toggle("active");
      mobileNav.classList.toggle("hamburger-active");
    };

    mobileNav.addEventListener("click", () => toggleNav());

  </script>
</body>

</html>