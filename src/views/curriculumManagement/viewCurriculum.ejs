<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Curriculum Management</title>
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Nobile&family=Mohave:wght@400&family=Amasis+MT+Pro+Medium&display=swap">
  <link rel="stylesheet" type="text/css" href="/public/css/concept.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body>
  <%- include('../partials/navbar/mainNavbar.ejs') %>

<div class="wrapper" id="wrapper">
  

  <main class="nav-drawer page-content-wrapper" id="page-content-wrapper">
    <div class="contentForm" id="form">
      <div class="container">
        <h1>Curriculums Management</h1>

        <!-- <div class="filter-search">
          <select name="filter" id="filter">
            <option value="all">All</option>
            <option value="admin">Admin</option>
            <option value="user">User</option>
          </select>
          <input type="text" name="search" id="search" placeholder="Enter keyword...">
          <button id="search-btn">Search</button>
        </div> -->
        <div class="add-user">
          <a href="/curriculum-management/create-curriculum"><button id="add-user-btn">New Curriculum</button> </a>

        </div>
        <div class="info-board">
          <table class="table-hover">
            <thead>
              <tr class="row-hover">
                <th>ID</th>
                <th>Curriculum Code</th>
                <th>Curriculum Name</th>
                <th>Description</th>
                <th>Total Credits</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% curriculumList.forEach(function(item, index){ %>
                <tr class="row-hover">
                  <td>
                    <%= item.id %>
                  </td>
                  <td>
                    <%= item.curriculum_code %>
                  </td>
                  <td>
                    <%= item.curriculum_name %>
                  </td>
                  <td>
                    <%= item.curriculum_description %>
                  </td>
                  <td>
                    <%= item.total_credits %>
                  </td>
                  <td>
                    <a style="display: inline;" href="/curriculum-management/update-curriculum/<%= item.id %>"><button
                        class="edit-btn" type="submit">Edit</button></a>
                    <form style="display: inline;" action="/curriculum-management/delete-curriculum/<%= item.id %>"
                      method="POST"><button class="delete-btn" type="submit">Delete</button></form>

                  </td>
                </tr>
                <% }) %>


            </tbody>
          </table>
        </div>
      </div>


    </div>
  </main>
</div>
 

</body>


</html>