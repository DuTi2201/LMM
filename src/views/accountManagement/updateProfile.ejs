<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>UpdateProfile</title>
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Nobile&family=Mohave:wght@400&family=Amasis+MT+Pro+Medium&display=swap">
  <link rel="stylesheet" type="text/css" href="/public/css/concept.css">
  <link rel="icon" href="../public/image/LOGO_LMM.svg" type="image/x-icon">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body>
  <main class="nav-drawer">
    <div class="contentForm" id="form">
      <form action="/account-management/edit-profile/updated-user" method="POST">
        <div class="container">
          <h1>Update User's Profile</h1>
          <div class="col-md-8"> <!-- Phần thứ hai: cập nhật/sửa đổi thông tin người dùng -->
              <!-- Form gửi dữ liệu lên server -->
              <input hidden name="id" value="<%=userData.id %>" />
              <div class="form-group"> 
                <input type="text" name="firstName" id="firstName" value="<%=userData.firstName %>" />      
              </div>
              <div class="form-group"> 
                <input type="text" name="lastName" id="lastName" value="<%=userData.lastName %>" />
              </div>
              <div class="form-group"> 
                <input name="phonenumber" id="phonenumber" value="<%=userData.phonenumber %>" />
              </div>
              <div class="form-group ">
                <label for="inputGender">Gender: </label>
                <select name="gender" id="gender" value="<%=userData.gender %>">
                  <option value="Male">Male</option>
                  <option value="Female">Female</option>
                  <option value="Other">Other</option>
                </select>
                <!-- <label for="actor">Actor: </label>
                <select name="actor" id="actor" value="<%=userData.actor %>">
                  <option value="Admin">Admin</option>
                  <option value="CRDD">CRDD</option>
                  <option value="AD">AD</option>
                  <option value="Teacher">Teacher</option>
                  <option value="Student">Student</option>
                </select> -->
              </div>


              <div class="form-group"> <!-- Nhóm input cho nút xác nhận cập nhật -->
                <a href="/account-management" id="back">Back</a>
                <button class="add-user-btn" type="submit" name="submit" id="submit">Update</button>

              </div>
          </div>
        </div>
      </form>
    </div>


    </div>
  </main>
  <script>
    const mobileNav = document.querySelector(".hamburger");
    const navbar = document.querySelector(".menubar");

    const toggleNav = () => {
      navbar.classList.toggle("active");
      mobileNav.classList.toggle("hamburger-active");
    };

    mobileNav.addEventListener("click", () => toggleNav());

  </script>
</body>

</html>