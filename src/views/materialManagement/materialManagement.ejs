<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Subject Management</title>
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Nobile&family=Mohave:wght@400&family=Amasis+MT+Pro+Medium&display=swap">
  <link rel="stylesheet" type="text/css" href="/public/css/concept.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body>
  <div class="wrapper" id="wrapper">
    <main class="nav-drawer page-content-wrapper" id="page-content-wrapper">
      <div class="contentForm" id="form">
        <div class="container">
          <h1>Material Management</h1>
          <div class="add-user">
            <a href="/material-management/create-material"><button id="add-user-btn">New Material</button></a>
          </div>
          <div class="info-board">
            <table class="table-hover">
              <thead>
                <tr class="row-hover">
                  <th>ID</th>
                  <th>Name</th>
                  <th>Author</th>
                  <th>Publicser</th>
                  <th>ISBN</th>
                  <th>Edition</th>
                  <th>Classification</th>
                  <th>Subject</th>
                  <th>FileName <br />File Path</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% if (materialList && Array.isArray(materialList)) { %>
                  <% materialList.forEach(function(item, index) { %>
                    <tr class="row-hover">
                      <td>
                        <%= item.id %>
                      </td>
                      <td>
                        <%= item.material_name %>
                      </td>
                      <td>
                        <%= item.material_author %>
                      </td>
                      <td>
                        <%= item.material_publisher %>
                      </td>
                      <td>
                        <%= item.material_isbn %>
                      </td>
                      <td>
                        <%= item.material_edition %>
                      </td>
                      <td>
                        <%= item.material_classification %>
                      </td>
                      <td>
                        <%= item.subject_id %>
                      </td>
                      <td>
                        <% item.file.forEach(function(file) { %>
                          <p>
                            <%= file.file_name %><br />
                              <%= file.file_upload %>
                          </p>

                          <% }) %>
                      </td>
                      <td>
                        <form style="display: inline;" action="/material-management/delete-material/<%= item.id %>"
                          method="POST"><button class="delete-btn" type="submit">Delete</button></form>
                      </td>
                    </tr>
                    <% }) %>
                      <% } else { %>
                        <tr>
                          <td colspan="7">No materials found.</td>
                        </tr>
                        <% } %>
              </tbody>

            </table>
          </div>
        </div>

      </div>
    </main>
  </div>
</body>


</html>