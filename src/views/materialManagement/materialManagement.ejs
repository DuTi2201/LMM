<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Subject Management</title>
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Nobile&family=Mohave:wght@400&family=Amasis+MT+Pro+Medium&display=swap">
  <link rel="stylesheet" type="text/css" href="/public/css/concept.css">
  <link rel="icon" href="../public/image/LOGO_LMM.svg" type="image/x-icon">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body>
  <nav>
    <a class="logo" href="/home" >
      <img src="../public/image/baner.svg" alt="LMM" href="/home" />
    </a>
    <ul class="desktop-menu">
      <li><a href="#">Home</a></li>
      <li><a href="#">Services</a></li>
      <li><a href="#">Blog</a></li>
      <li><a href="#">Contact Us</a></li>
    </ul>
    <div class="usermenu">
      <ul>
        <span class="logout">You are logged in! ( <a href="/logout">Log out</a>)</span>

      </ul>
    </div>
    <div class="hamburger">
      <span class="line"></span>
      <span class="line"></span>
      <span class="line"></span>
    </div>
  </nav>
  <div class="menubar">
    <h2>Dashboard</h2>
    <ul>
      <li class="accMana" id="add-btn"> <a href="/account-management">Accounts Management</a></li>
      <li id="add-btn"> <a href="/material-management">Material Management</a></li>
      <li class="accMana" id="add-btn"> <a href="/subject-management">Subjects Management</a></li>

    </ul>
  </div>
  <main class="nav-drawer">
    <div class="contentForm" id="form">
      <div class="container">
        <h1>Material Management</h1>

        <div class="filter-search">
          <select name="filter" id="filter">
            <option value="all">All</option>
            <option value="admin">Admin</option>
            <option value="user">User</option>
          </select>
          <input type="text" name="search" id="search" placeholder="Enter keyword...">
          <button id="search-btn">Search</button>
        </div>
        <div class="add-user">
          <a href="/material-management/create-material"><button id="add-user-btn">New Material</button> </a>

        </div>
        <div class="info-board">
          <table class="table-hover">
            <thead>
              <tr class="row-hover">
                <th>ID</th>
                <th>Description</th>
                <th>Author</th>
                <th>Publicser</th>
                <th>ISBN</th>
                <th>Edition</th>
                <th>Classification</th>
                <th>Note</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% materialList.forEach(function(item, index){ %>
                <tr class="row-hover">
                  <td>
                    <%= item.id %>
                  </td>
                  <td>
                    <%= item.material_description %>
                  </td>
                  <td>
                    <%= item.author %>
                  </td>
                  <td>
                    <%= item.publicser %>
                  </td>
                  <td>
                    <%= item.isbn %>
                  </td>
                  <td>
                    <%= item.edition %>
                  </td>
                  <td>
                    <%= item.classification %>
                  </td>
                  <td>
                    <%= item.note %>
                  </td>

                  <td>
                    <!-- <a style="display: inline;" href="/subject-management/edit-profile/<%= item.id %>" ><button class="edit-btn" type="submit">Edit</button></a> -->
                    <form style="display: inline;" action="/material-management/delete-material/<%= item.id %>"
                      method="POST"><button class="delete-btn" type="submit">Delete</button></form>

                  </td>
                </tr>
                <% }) %>


            </tbody>
          </table>
        </div>
      </div>


    </div>
  </main>
  <script>
    const mobileNav = document.querySelector(".hamburger");
    const navbar = document.querySelector(".menubar");

    const toggleNav = () => {
      navbar.classList.toggle("active");
      mobileNav.classList.toggle("hamburger-active");
    };

    mobileNav.addEventListener("click", () => toggleNav());

  </script>
</body>

</html>